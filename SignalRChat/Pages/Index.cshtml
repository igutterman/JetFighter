@page

@using Microsoft.AspNetCore.Antiforgery;
@inject IAntiforgery AntiForgery;


    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>

    <div class="rooms">
        <div class="col-2">Room Name</div>
        <div class="col-4"><input type="text" id="roomNameInput" /></div>
        <div class="col-6">
            <input type="button" id="addRoomButton" value="Add Room" />
        </div>
        <ul id="roomsList"></ul>
    </div>


    <form method="post" id="joinRoomForm" target="_blank" action="/Room" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input name="Name" type="hidden" id="joinRoomInput"/>
    </form>


    <div class="ChatRooms" id="ChatRooms">



    </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

